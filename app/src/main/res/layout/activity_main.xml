<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:background="@drawable/f2">

    <RelativeLayout
        android:layout_marginTop="@dimen/btnMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">
        <LinearLayout
            android:id="@+id/llBtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/imvUno"
                android:layout_width="@dimen/btnMenu"
                android:layout_height="@dimen/btnMenu"
                android:src="@drawable/uno"
                android:layout_marginLeft="50dp"/>
            <ImageView
                android:id="@+id/imvDos"
                android:layout_marginTop="90dp"
            android:layout_width="@dimen/btnMenu"
            android:layout_height="@dimen/btnMenu"
            android:src="@drawable/dos"
            android:layout_marginLeft="70dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="0dp"
            android:id="@+id/llBtn"
            android:layout_below="@+id/llBtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imvTres"
                android:layout_width="@dimen/btnMenu"
                android:layout_height="@dimen/btnMenu"
                android:src="@drawable/tres"
                android:layout_marginLeft="30dp"/>
            <ImageView
                android:id="@+id/imvCuatro"
            android:layout_width="@dimen/btnMenu"
            android:layout_height="@dimen/btnMenu"
            android:src="@drawable/cuatro"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="90dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/llBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>